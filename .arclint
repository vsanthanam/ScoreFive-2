{
	"linters": {
		"sftool-config": {
			"type": "json",
			"include": ["(\\.sftool-config)"]
		},
		"arctools": {
			"type": "php"
		},
		"swift-lint": {
			"type": "script-and-regex",
			"script-and-regex.script": "./dasut lint --arclint ",
          	"script-and-regex.regex": "/^(?P<severity>warning|error):(?P<line>\\d+):(?P<char>\\d+) (?P<message>.*)$/m",
			"include": ["(\\.swift)"],
			"exclude": ["/Vendor/"]
		}
	}
}
